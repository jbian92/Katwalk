<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="400dp"
    android:layout_height="300dp"
    android:orientation="horizontal"
    android:padding="5dp">

    <TextView
        android:id="@+id/clothing_item"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/border"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/wear_btn"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:autoText="false"
        android:text="Wear"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/clothing_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="@+id/clothing_item"
        app:layout_constraintTop_toTopOf="@+id/clothing_item"
        app:layout_constraintVertical_bias="0.915" />

    <ImageView
        android:id="@+id/outfitImage2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="92dp"
        android:layout_marginTop="128dp"
        android:contentDescription="@string/app_name"
        android:padding="10dp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/outfitImage01"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="32dp"
        android:contentDescription="@string/app_name"
        android:padding="10dp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/outfitImage4"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="204dp"
        android:layout_marginTop="124dp"
        android:contentDescription="@string/app_name"
        android:padding="10dp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ToggleButton
        android:id="@+id/fav_btn"
        style="@style/FavButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:checked="false"
        android:textOff="@string/nullString"
        android:textOn='@string/nullString'
        app:layout_constraintBottom_toBottomOf="@+id/wear_btn"
        app:layout_constraintEnd_toEndOf="@+id/clothing_item"
        app:layout_constraintStart_toEndOf="@+id/wear_btn"
        app:layout_constraintTop_toTopOf="@+id/wear_btn"
        app:tint="@color/black" />

    <ImageView
        android:id="@+id/outfitImage3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="200dp"
        android:layout_marginTop="32dp"
        android:contentDescription="@string/app_name"
        android:padding="10dp"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>